{
  "beautify.config": {
    "css": {
      "indent_size": 2
    },
    "indent_char": " ",
    "indent_size": 4,
    "js": {
      "allowed_file_extensions": ["js", "jsonc", "json", "jshintrc", "jsbeautifyrc"],
      "indent_char": " ", // Indentation character
      "indent_size": 2
    }
  },
  "dotfiles.installCommand": "~/dotfiles/install.sh",
  "dotfiles.repository": "https://github.com/dmorand17/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles",
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80, 100, 120],
  "editor.suggest.showWords": false,
  "editor.tabSize": 2,
  "files.associations": {
    "*.fmlpp": "map"
  },
  "files.insertFinalNewline": true,
  "git.confirmSync": false,
  "go.toolsManagement.autoUpdate": true,
  "prettier.printWidth": 120,
  "python.defaultInterpreterPath": "python3",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.flake8Args": ["--ignore=E501"],
  "python.linting.flake8Enabled": true,
  "python.pythonPath": "python3",
  "rest-client.environmentVariables": {
    "$shared": {
      "nonProdToken": "bar",
      "prodToken": "foo",
      "version": "v1"
    },
    "local": {
      "client_id": "{{$shared nonProdToken}}",
      "client_secret": "devSecret",
      "endpoint": "bend.local.commure.com:8000"
    }
  },
  "rest-client.formParamEncodingStrategy": "always", // https://github.com/Huachao/vscode-restclient/issues/222
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.inheritEnv": true,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX", "[ ]", "[x]"],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.tree.showScanModeButton": false,
  "vs-kubernetes": {
    "vs-kubernetes.draft-path.mac": "/Users/douglasm/.vs-kubernetes/tools/draft/darwin-amd64/draft",
    "vs-kubernetes.kubectl-path.mac": "/Users/douglasm/.vs-kubernetes/tools/kubectl/kubectl",
    "vs-kubernetes.minikube-path.mac": "/Users/douglasm/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
    "vscode-kubernetes.minikube-path.mac": "/Users/douglasm/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  "workbench.colorTheme": "Dracula",
  "workbench.editor.enablePreview": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 12,
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": false,
    "gitlens.codeLens.symbolScopes": ["!Module"]
  },
  "[rust]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
